@model List<UserManagementApp.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Avatar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><img src="@user.Avatar" alt="Avatar" /></td>
                <td>
                    <a href="@Url.Action("Details", new { id = user.Id })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
